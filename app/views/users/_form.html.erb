<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "") %> 個錯誤發生:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li style="list-style: none;"><%= message.gsub(" ","") %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">

      <div class="pgTitle">
        <% if params[:action] == "new" || params[:action] == "create" %>
            <h2 class="f_l">會員追加</h2>
        <% else %>
            <h2 class="f_l">會員編輯</h2>
        <% end %>
        <div class="completeBtn">
          <% if params[:action] == "new" || params[:action] == "create" %>
              <input type="submit" value="保存" onclick="" class="button button-raised button-primary"/>
              <input type="button" value="取消" onclick="location.href='/users'" class="button button-raised button-primary"/>
          <% else %>
              <input type="submit" value="更新" onclick="" class="button button-raised button-primary"/>
              <input type="button" value="取消" onclick="location.href='<%= user_path %>'" class="button button-raised button-primary"/>
          <% end %>
        </div>
        <hr class="cb" />
      </div>
      <p class="mb10"><span class="star_shop">「※」</span>號表示的是必填項。</p>
      <div class="commonBox">
        <table class="tform">
          <tr>
            <th>用戶名<span class="star_span">※</span></th>
            <td><%= f.text_field :login,class:"w260",value:"#{@user.login}" %></td>
          </tr>
          <tr>
            <th>姓名<span class="star_span">※</span></th>
            <td><%= f.text_field :name,class:"w260",value:"#{@user.name}",maxlength:"11" %></td>
          </tr>
          <tr>
            <th>手機號碼<span class="star_span">※</span></th>
            <td><%= f.telephone_field :phone,class:"w260",value:"#{@user.phone}",onkeyup:"this.value=this.value.replace(/[^0-9]/g,'')", onafterpaste:"this.value=this.value.replace(/[^0-9]/g,'')" %></td>
          </tr>
          <tr>
            <th>密碼<span class="star_span">※</span></th>
            <td><%= f.password_field :password,class:"w260",value:"#{@user.password}" %></td>
          </tr>
          <tr>
            <th>密碼(確認)<span class="star_span">※</span></th>
            <td><%= f.password_field :password_confirmation,class:"w260",value:"" %></td>
          </tr>
          <tr>
            <th>郵箱<span class="star_span">※</span></th>
            <td><%= f.email_field :email,class:"w260",value:"#{@user.email}" %></td>
          </tr>

          <tr>
            <th>生日<span class="star_span">※</span></th>
            <td><select name="month">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
              <option>9</option>
              <option>10</option>
              <option>11</option>
              <option>12</option>
            </select>&nbsp;月&nbsp;&nbsp;<select name="day">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
              <option>9</option>
              <option>10</option>
              <option>11</option>
              <option>12</option>
              <option>13</option>
              <option>14</option>
              <option>15</option>
              <option>16</option>
              <option>17</option>
              <option>18</option>
              <option>19</option>
              <option>20</option>
              <option>21</option>
              <option>22</option>
              <option>23</option>
              <option>24</option>
              <option>25</option>
              <option>26</option>
              <option>27</option>
              <option>28</option>
              <option>29</option>
              <option>30</option>
            </select>&nbsp;日</td>
          </tr>
          <tr>
            <th>性別<span class="star_span">※</span></th>
            <td>
              <%= f.radio_button :sex,"1",checked:true %><%= label_tag :sex, "男" %>
              <%= f.radio_button :sex,"0" %><%= label_tag :sex, "女" %>
            </td>
          </tr>
          <tr>
            <th>職業</th>
            <td>
              <%= f.text_field :profession,class:"w260",value:"#{@user.profession}" %>
            </td>
          </tr>
          <tr>
            <th>年齡段</th>
            <td><select name="age_segment">
              <option value="＜15">＜15</option>
              <option value="16－20">16－20</option>
              <option value="21－25">21－25</option>
              <option value="26－30">26－30</option>
              <option value="31－35">31－35</option>
              <option value="36－40">36－40</option>
              <option value="41－50">41－50</option>
              <option value="51－60">51－60</option>
              <option value="＞60">＞60</option>
            </select>
            </td>
          </tr>
          <tr>
            <th>推薦人電話</th>
            <td>
              <%= f.telephone_field :recommend_person_phone,class:"w260",value:"#{@user.recommend_person_phone}",maxlength:"11" %>
            </td>
          </tr>
        </table>
      </div>

    <%#= f.submit %>
  </div>
<% end %>

<%= form_for(faq) do |f| %>
  <% if faq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(faq.errors.count, "") %> 個錯誤發生:</h2>

      <ul>
      <% faq.errors.full_messages.each do |message| %>
        <li style="list-style: none"><%= message.gsub(" ","") %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">

      <div class="pgTitle">
        <% if params[:action] == "new" || params[:action] == "create" %>
            <h2 class="f_l">常见问题追加</h2>
        <% else %>
            <h2 class="f_l">常见问题編輯</h2>
        <% end %>
        <div class="completeBtn">
          <% if params[:action] == "new" || params[:action] == "create" %>
              <input type="submit" value="保存" onclick="" class="button button-raised button-primary"/>
              <input type="button" value="取消" onclick="javascript:history.go(-1)" class="button button-raised button-primary"/>
          <% else %>
              <input type="submit" value="更新" onclick="" class="button button-raised button-primary"/>
              <input type="button" value="取消" onclick="location.href='<%= faq_url %>'" class="button button-raised button-primary"/>
          <% end %>
        </div>
        <hr class="cb" />
      </div>
      <p class="mb10"><span class="star_shop">「※」</span>號表示的是必填項。</p>
      <div class="commonBox">
        <table class="tform">
          <tr>
            <th>問題<span class="star_span">※</span></th>
            <td><%= f.text_field :ask,size:"60" %></td>
          </tr>
          <tr>
            <th>回答<span class="star_span">※</span></th>
            <td><%= f.text_area :answer,rows:"8",size:"110%" %></td>
          </tr>
        </table>
      </div>
    <%#= f.submit %>
  </div>
<% end %>
